{
  "compilerOptions": {
    "strict": true,
    "outDir": "build",
    "module": "commonjs",
    "target": "es5",
    "lib": ["es5", "es6", "esnext", "dom"],
    "sourceMap": true,
    "allowJs": true,
    "moduleResolution": "node",
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "alwaysStrict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "baseUrl": "./src",
    "rootDir": "src",
    "allowSyntheticDefaultImports": true,
    "declaration": true,
    "declarationMap": true
  },
  "exclude": [
    "node_modules",
    "dist",
    "build"
  ],
  "include": [
    "src"
  ]
}
